{
  "expo": {
    "name": "BiLi",
    "slug": "BiLi",
    "scheme": "bili",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/bili_logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/bili_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#6C63FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.biliapp.bili",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "This app needs access to microphone for voice AI conversations"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/bili_logo.png",
        "backgroundColor": "#6C63FF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.biliapp.bili",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/bili_logo.png"
    },
    "plugins": [
      "expo-secure-store",
      "expo-asset",
      "expo-dev-client"
    ],
    "extra": {
      "eas": {
        "projectId": "887a6893-24ec-446b-b276-1f50e8f2f562"
      }
    }
  }
}
